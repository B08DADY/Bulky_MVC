@page
@using BulkyWebRazor_Temp.Models
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>

        </div>

        <div class="col-4 text-end">
            <a asp-page="/categories/Create" class=" btn btn-primary me-2">
                <i class="bi bi-patch-plus-fill"></i> Add 
            </a>

        </div>


    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th class="ps-5">
                    <h3>Operation</h3>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (Category cat in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <th>
                        @cat.Id
                    </th>
                    <th>
                        @cat.Name
                    </th>
                    <th>
                        @cat.DisplayOrder
                    </th>
                    <th>
                        <a asp-page="/categories/Edit"  asp-route-Id="@cat.Id" class=" btn btn-outline-secondary me-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/categories/Delete"  asp-route-id="@cat.Id" class="btn btn-danger">
                            <i class="bi bi-trash3-fill me-1"></i>Delete
                        </a>
                    </th>
                </tr>
            }

        </tbody>

    </table>
</div>