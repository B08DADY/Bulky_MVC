@model Category

<div class="container">
    <div class="page-header">
        <h1 class="form-title">Delete Category</h1>
    </div>

    <div class="form-container">
        <div class="delete-warning">
            <h5 class="text-danger mb-2">Warning</h5>
            <p class="mb-0">Are you sure you want to delete this category? This action cannot be undone.</p>
        </div>

        <form method="post">
            <input asp-for="Id" hidden />

            <div class="input-group-custom">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled>
            </div>

            <div class="input-group-custom">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" disabled>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-trash3 me-2"></i>Delete
                    </button>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>