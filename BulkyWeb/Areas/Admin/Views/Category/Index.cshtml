@model List<Category>

<div class="container-fluid">
    <div class="page-header">
        <div class="container">
            <div class="index-header">
                <h1 class="index-title">
                    <i class="bi bi-list-task me-2"></i>Categories
                </h1>
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Add New Category
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="table-custom">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cat in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td>@cat.Id</td>
                            <td>@cat.Name</td>
                            <td>@cat.DisplayOrder</td>
                            <td class="text-end action-buttons">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-outline-primary btn-sm ">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash3 me-1"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
