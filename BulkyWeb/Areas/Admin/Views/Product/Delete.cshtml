@model Product

<div class="container">
    <div class="page-header">
        <h1 class="form-title">Delete Product</h1>
    </div>

    <div class="form-container">
        <div class="delete-warning">
            <h5 class="text-danger mb-2">Warning</h5>
            <p class="mb-0">Are you sure you want to delete this Product? This action cannot be undone.</p>
        </div>

        <form method="post">
            <input asp-for="Id" hidden />

            <div class="input-group-custom">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" disabled>
            </div>

            <div class="input-group-custom">
                <label asp-for="Author"></label>
                <input asp-for="Author" class="form-control" disabled>
            </div>
            <div class="input-group-custom">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" disabled>
            </div>
            <div class="input-group-custom">
                <label asp-for="Author"></label>
                <input asp-for="Author" class="form-control" disabled>
            </div>
            <div class="input-group-custom">
                <label asp-for="ISBN"></label>
                <input asp-for="ISBN" class="form-control" disabled>
            </div>
            <div class="input-group-custom">
                <label asp-for="ListPrice"></label>
                <input asp-for="ListPrice" class="form-control" disabled>
            </div>
            <div class="input-group-custom">
                <label asp-for="Price"></label>
                <input asp-for="Price" disabled class="form-control">
            </div>
            <div class="input-group-custom">
                <label asp-for="Price50"></label>
                <input asp-for="Price50" class="form-control" disabled>
            </div>
            <div class="input-group-custom">
                <label asp-for="Price100"></label>
                <input asp-for="Price100" class="form-control" disabled>

            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-trash3 me-2"></i>Delete
                    </button>
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>